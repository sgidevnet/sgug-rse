+static nsurl *nsgtk_get_resource_url(const char *path)
+{
+	char buf[PATH_MAX];
+	nsurl *url = NULL;
+
+	/* favicon.ico -> favicon.png */
+	if (strcmp(path, "favicon.ico") == 0) {
+		nsurl_create("resource:favicon.png", &url);
+	} else {
+		netsurf_path_to_nsurl(filepath_sfind(respaths, buf, path), &url);
+	}
+
+	return url;
+}
